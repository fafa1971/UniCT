program cerchio;
uses graph,crt ;
const detect=0;
var
   j,modo,r,x,y,c:integer;
  procedure  cer  ;
  begin
    initgraph(j,modo ,'');
    setcolor(c);

    circle(x,y,r);
  end;
  begin
    write('x: ');readln(x);
    write('y: ');readln(y) ;
    write('r: ');readln(r);
    write('c: ');readln(c);
    cer;
    repeat until readkey<>#0;
    closegraph;
    end.


